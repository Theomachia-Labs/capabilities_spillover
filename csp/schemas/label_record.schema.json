{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LabelRecord",
  "type": "object",
  "required": ["label_id", "paper_id", "label", "confidence", "method", "audit_status", "created_at"],
  "properties": {
    "label_id": {"type": "string"},
    "paper_id": {"type": "string"},
    "label": {
      "type": "string",
      "enum": ["safety_use", "capability_use", "mixed", "unclear"]
    },
    "confidence": {"type": "number", "minimum": 0, "maximum": 1},
    "evidence_spans": {
      "type": "array",
      "items": {"type": "string"}
    },
    "method": {"type": "string", "enum": ["rules", "llm", "human", "mixed"]},
    "audit_status": {
      "type": "string",
      "enum": ["pending", "verified", "disputed"]
    },
    "created_at": {"type": "string", "format": "date-time"}
  },
  "additionalProperties": false
}
