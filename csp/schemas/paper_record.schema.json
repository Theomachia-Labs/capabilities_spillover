{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PaperRecord",
  "type": "object",
  "required": ["paper_id", "title"],
  "properties": {
    "paper_id": {"type": "string"},
    "title": {"type": "string"},
    "abstract": {"type": "string"},
    "year": {"type": "integer", "minimum": 1900, "maximum": 2100},
    "identifiers": {
      "type": "object",
      "properties": {
        "doi": {"type": "string"},
        "arxiv": {"type": "string"},
        "openalex": {"type": "string"},
        "semantic_scholar": {"type": "string"}
      },
      "additionalProperties": false
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {"type": "string"},
          "author_id": {"type": "string"}
        },
        "additionalProperties": false
      }
    },
    "citations": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "additionalProperties": false
}
