{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CSPScore",
  "type": "object",
  "required": ["score_id", "paper_id", "rubric_version", "dimensions", "provenance"],
  "properties": {
    "score_id": {"type": "string"},
    "paper_id": {"type": "string"},
    "rubric_version": {"type": "string"},
    "dimensions": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["score"],
        "properties": {
          "score": {"type": "number", "minimum": 0, "maximum": 5},
          "uncertainty": {"type": "number", "minimum": 0, "maximum": 1},
          "rationale": {"type": "string"},
          "evidence": {
            "type": "array",
            "items": {"$ref": "#/definitions/evidenceItem"}
          }
        },
        "additionalProperties": false
      }
    },
    "provenance": {
      "type": "object",
      "required": ["method", "created_at"],
      "properties": {
        "method": {"type": "string", "enum": ["human", "llm", "rules", "mixed"]},
        "created_at": {"type": "string", "format": "date-time"},
        "model": {"type": "string"},
        "notes": {"type": "string"}
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "evidenceItem": {
      "type": "object",
      "required": ["citation_id", "snippet"],
      "properties": {
        "citation_id": {"type": "string"},
        "snippet": {"type": "string"},
        "locator": {"type": "string"},
        "url": {"type": "string", "format": "uri"}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
