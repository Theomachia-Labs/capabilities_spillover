{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SurveyResponse",
  "type": "object",
  "required": ["response_id", "respondent_id", "responses", "created_at"],
  "properties": {
    "response_id": {"type": "string"},
    "respondent_id": {"type": "string"},
    "created_at": {"type": "string", "format": "date-time"},
    "calibration": {
      "type": "object",
      "properties": {
        "score": {"type": "number", "minimum": 0, "maximum": 1},
        "notes": {"type": "string"}
      },
      "additionalProperties": false
    },
    "responses": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["topic", "dimensions"],
        "properties": {
          "topic": {"type": "string"},
          "dimensions": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": {
              "type": "object",
              "required": ["score"],
              "properties": {
                "score": {"type": "number", "minimum": 0, "maximum": 5},
                "uncertainty": {"type": "number", "minimum": 0, "maximum": 1}
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
